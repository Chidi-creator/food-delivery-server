{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@chidi-food-delivery/common": [
        "libs/common/src"
      ],
      "@chidi-food-delivery/common/*": [
        "libs/common/src/*"
      ],
      "@chidi-food-delivery/interfaces": [
        "libs/interfaces/src"
      ],
      "@chidi-food-delivery/interfaces/*": [
        "libs/interfaces/src/*"
      ]
    }
  }
}